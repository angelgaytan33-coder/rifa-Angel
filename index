  <script>
    const CONFIG={
      TOTAL_NUMBERS:80,
      RESERVED:[3,4,9,10,13,17,22,23,27,29,45,46,53,55],
      SOLD:[]
    };

    const numsContainer=document.getElementById('nums');
    const whatsBtn=document.getElementById('whats-cta');
    const whatsappLink='https://wa.me/8126515543';

    let selectedNumbers=[];

    function renderNumbers(){
      numsContainer.innerHTML='';
      for(let i=0;i<CONFIG.TOTAL_NUMBERS;i++){
        if(CONFIG.SOLD.includes(i) || CONFIG.RESERVED.includes(i)) continue;
        const numEl=document.createElement('div');
        numEl.classList.add('num');
        numEl.textContent=i.toString().padStart(2,'0');
        numEl.addEventListener('click',()=>{
          if(!selectedNumbers.includes(i)) selectedNumbers.push(i);
          else selectedNumbers = selectedNumbers.filter(n=>n!==i);
          updateWhatsBtn();
          numEl.style.background = selectedNumbers.includes(i)? '#5b8cff' : '#0f1732';
        });
        numsContainer.appendChild(numEl);
      }
    }

    function updateWhatsBtn(){
      if(selectedNumbers.length>0){
        const numbersText = selectedNumbers.map(n=>n.toString().padStart(2,'0')).join(', ');
        whatsBtn.href = `https://wa.me/8126515543?text=Hola,%20quiero%20apartarle%20los%20siguientes%20nÃºmeros:%20${numbersText}`;
      }else{
        whatsBtn.href = whatsappLink;
      }
    }

    renderNumbers();
  </script>
